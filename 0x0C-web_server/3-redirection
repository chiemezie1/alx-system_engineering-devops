#!/usr/bin/env bash
# This script configures Nginx to redirect /redirect_me to another page

# Ensure Nginx is installed
apt-get update
apt-get install -y nginx

# Insert the redirection into the Nginx default site configuration
sed -i '/server_name _;/a \\n    location /redirect_me {\n        return 301 https://github.com/chiemezie1;\n    }\n' /etc/nginx/sites-available/default

# Restart Nginx to apply the changes
service nginx restart

# Verify the redirection
curl -sI localhost/redirect_me
